<h1>Listing dreams</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Entry</th>
      <th>Image url</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dreams.each do |dream| %>
      <tr>
        <td><%= dream.date %></td>
        <td><%= dream.entry %></td>
        <td><%= dream.image_url %></td>
        <td><%= dream.user_id %></td>
        <td><%= link_to 'Show', dream %></td>
        <td><%= link_to 'Edit', edit_dream_path(dream) %></td>
        <td><%= link_to 'Destroy', dream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

